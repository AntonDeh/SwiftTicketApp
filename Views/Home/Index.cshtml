@model HomeViewModel

<div class="container mt-5">
    @if (Model.IsUserAuthenticated)
    {
        <h2 class="text-center mb-5">Service Catalog</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Service Request</h5>
                        <p class="card-text">Click here to submit a service request to the iLS team on your site.</p>
                        <a href="@Url.Action("CreateRequest", "Ticket")" class="btn btn-primary">Submit Request</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Ticket Finder</h5>
                        <p class="card-text">Searching for a specific ticket? Click here to find it.</p>
                        <a href="@Url.Action("ShowSearchForm", "Ticket")" class="btn btn-primary">Search Ticket</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">My Requests</h5>
                        <p class="card-text">View and manage your service requests.</p>
                        <a href="@Url.Action("MyTickets", "Ticket")" class="btn btn-primary">View Requests</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Closed Requests History</h5>
                        <p class="card-text">View the history of your closed requests.</p>
                        <a href="@Url.Action("ClosedTickets", "Ticket")" class="btn btn-secondary">View Closed Requests</a>
                    </div>
                </div>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">User Management</h5>
                            <p class="card-text">Click here to assign roles to users and manage them.</p>
                            <a href="@Url.Action("UsersList", "Admin")" class="btn btn-info">Manage Users</a>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Role Management</h5>
                            <p class="card-text">Click here to manage roles.</p>
                            <a href="@Url.Action("Index", "Role")" class="btn btn-info">Manage Roles</a>
                        </div>
                    </div>
                </div>
            }
            @if (User.IsInRole("Technician"))
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <h5 class="card-title">Technician Dashboard</h5>
                            <p class="card-text">Access your service dashboard and manage requests.</p>
                            <a href="@Url.Action("TechnicianDashboard", "Ticket")" class="btn btn-primary">Dashboard</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center">
            <p>Please <a href="@Url.Action("Login", "Account")">log in</a> to access the service catalog.</p>
        </div>
    }
</div>
