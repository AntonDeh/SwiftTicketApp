@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="container mt-5">
    <h1 class="text-center mb-4">Roles List</h1>

    <div class="text-center mb-4">
        <a href="@Url.Action("Create")" class="btn btn-primary">Create New Role</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Role Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", new { id = role.Id })" class="btn btn-info">Edit</a>
                            <a href="@Url.Action("Delete", new { id = role.Id })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
