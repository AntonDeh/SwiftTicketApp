@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h1>Roles List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <!-- Links for editing or deleting a role can be placed here -->
                    <a href="@Url.Action("Edit", new { id = role.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = role.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Role</a>
