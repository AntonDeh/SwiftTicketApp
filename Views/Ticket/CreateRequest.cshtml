@model CreateTicketViewModel

<div class="container mt-5">
    <h2 class="text-center">Submit Service Request</h2>

    <form asp-action="CreateRequest" method="post" class="mt-4" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="CurrentSite" class="form-label">Current Site *</label>
            <select asp-for="CurrentSite" class="form-select">
                <option value="">Please select</option>
                @foreach (var site in Model.AvailableSites)
                {
                    <option value="@site.Value">@site.Text</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label">Category *</label>
            <select asp-for="Category" class="form-select">
                <option value="">Please select a category</option>
                @foreach (var category in Model.AvailableCategories)
                {
                    <option value="@category.Value">@category.Text</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description *</label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="MobileNumber" class="form-label">Mobile Number</label>
            <input asp-for="MobileNumber" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="LabLocation" class="form-label">Lab / Location *</label>
            <input asp-for="LabLocation" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="Urgency" class="form-label">Urgency *</label>
            <select asp-for="Urgency" class="form-select">
                <option value="">Please select urgency</option>
                @foreach (var urgency in Model.AvailableUrgencies)
                {
                    <option value="@urgency.Value">@urgency.Text</option>
                }
            </select>
        </div>


        <div class="mb-3">
            <label asp-for="Attachments" class="form-label">Attachments</label>
            <input asp-for="Attachments" type="file" class="form-control" multiple>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-secondary">Cancel</button>
        </div>
    </form>
</div>
