@model CreateTicketViewModel

<div class="container mt-5">
    <h2 class="text-center">Submit Incident</h2>

    <form asp-action="SubmitIncident" method="post" class="mt-4" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="currentSite" class="form-label">Current Site *</label>
            <select id="currentSite" class="form-select">
                <option value="">Please select</option>
                <!-- Дополнительные опции -->
            </select>
        </div>

        <div class="mb-3">
            <label for="category" class="form-label">Category *</label>
            <select id="category" class="form-select">
                <option value="">Please select a category</option>
                <!-- Дополнительные опции -->
            </select>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description *</label>
            <textarea id="description" class="form-control" rows="5"></textarea>
        </div>

        <div class="mb-3">
            <label for="mobileNumber" class="form-label">Mobile Number</label>
            <input type="tel" id="mobileNumber" class="form-control">
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Lab / Location *</label>
            <input type="text" id="location" class="form-control">
        </div>

        <div class="mb-3">
            <label for="urgency" class="form-label">Urgency *</label>
            <select id="urgency" class="form-select">
                <option value="Low">Low</option>
                <!-- Дополнительные опции -->
            </select>
        </div>

        <div class="mb-3">
            <label for="cc" class="form-label">CC</label>
            <input type="email" multiple id="cc" class="form-control">
        </div>

        <div class="mb-3">
            <label for="attachments" class="form-label">Attachments</label>
            <input type="file" id="attachments" class="form-control" multiple>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-secondary">Cancel</button>
        </div>
    </form>
</div>
