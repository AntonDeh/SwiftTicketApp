@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>Users List</h2>
<!-- Button to add a new user -->
<div>
    <a href="@Url.Action("AddUser", "Admin")" class="btn btn-primary">Add New User</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="btn btn-default">Edit</a>
                    <!-- Form for deleting a user -->
                    <form asp-action="DeleteUser" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
